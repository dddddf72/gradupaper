<view class="item" bind:tap="handleToggle">
    <view class="head">
        <image src="{{data.avatar}}"></image>
        <text>{{data.date}}</text>
    </view>
    <view class="title">{{data.title}}</view>
    <image class="bg" src="{{data.imgSrc}}"></image>
    <view class="content">{{data.content}}</view>
    <view class="end">
        <image class="icon" src="/images/icons/chat1.png"></image>
        <text>{{data.collectNum}}</text>
        <image class="icon" src="/images/icons/view.png"></image>
        <text>{{data.reading}}</text>
        <image class="icon" src="{{data.collected?'/images/collection.png':'/images/collection-anti.png'}}"></image>
    </view>
</view>
