/* components/movie-item/movie-item.wxss */
.out{
    display: grid;
    grid-template-columns: repeat(auto-fill,250rpx);
    align-items: center;
    justify-items: center;
}
.img{
    width:200rpx;
    height: 280rpx;
}
.star{
    width:30rpx;
    height: 30rpx;
    display: flex;
}
.star image{
    width: 30rpx;
    height: 30rpx;
}
.item{
    margin-top: 20rpx;
    width:200rpx;
    display: flex;
    flex-direction: column;
}
.title{
    font-size: 26rpx;
    line-height: 50rpx;
}
.rating{
    font-size: 24rpx;
    color:#C20C0C
}
.btm{
    display: flex;
    align-items: center;
}