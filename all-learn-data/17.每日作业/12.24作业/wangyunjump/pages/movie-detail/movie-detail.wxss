/* pagedetail部分开始 */
.out{
    background-color: rgb(74, 40, 31);
}
.pagedetail{
    display:flex;
    color: #fff;
    background-color: rgb(74, 40, 31);
    padding-top: 30rpx;
    padding-left: 30rpx;
}
.righttxt{
    display: flex;
    flex-direction: column;
    margin-left: 50rpx;
}
.righttxt text:not(:nth-child(1)){
    margin-top: 30rpx;
}
.likestar{
    display: flex;
}
.likestar view{
    display: flex;
    align-items: center;
    color: #333;
    background-color: #fff;
    border-radius: 10rpx;
    padding:10rpx 40rpx 10rpx 0;
    margin-bottom: 40rpx;
    margin-top: 30rpx;
}
.likestar view:nth-child(2){
    margin-left: 20rpx;
}
.Etitle{
    width: 260rpx;
}
.likestar view>image{
    margin:0 20rpx 0 40rpx;
    width: 50rpx;
    height: 50rpx;
}
.leftpic image{
    width: 200rpx;
    height: 300rpx;
}
.btn{
    background:repeating-linear-gradient(to right,rgb(255, 241, 207) 0rpx, rgb(255, 241, 207) 83rpx,rgb(253, 203, 130) 83rpx,rgb(253, 203, 130) 320rpx);
}
.detailtext{
    width: 456rpx;
}
.title{
    font-size: 40rpx;
    font-weight: bold;
}


/* pagedetail部分结束 */

/* 评分部分开始 */
.sup{
    font-size: 20rpx;
    vertical-align: text-top;
}
.rating{
    display: flex;
    flex-direction: column;
}
.ratingleftone{
    display: flex;
}
.ratingout{
    padding: 0 50rpx;
    background-color: transparent;
}
.rating{
    padding: 25rpx 20rpx;
    display: flex;
    margin-top: 30rpx;
    margin-left: auto;
    margin-right: auto;
    background-color: rgb(66, 36, 25);
}
.ratingleftone{
    position: relative;
    font-size: 40rpx;
    color: #fff;
}
.ratingleft{
    font-size: 80rpx;
    color: #fff;
    margin-right: 30rpx;
}
.ratingnum{
    margin-top: 50rpx;
    display: flex;
}

.apprating{
    padding:13rpx 15rpx 15rpx 15rpx;
    border: 1px solid #fff;
    border-radius: 15rpx;
    position: absolute;
    right: 0;
}
.ratinglast{
    margin-top: 20rpx;
    display: flex;
    flex-direction: column;
}
.ratinglast text{
    margin-left: 10rpx;
    font-size: 38rpx;
}
image{
    width: 50rpx;
    height: 50rpx;
}
/* 评分部分结束 */

/* 点播部分开始 */
.clickplayout{
    margin-top: 30rpx;
    padding:0 50rpx;
    color: transparent;
}
.clickplay{
    position: relative;
    display: flex;
    align-items: center;
    padding: 30rpx;
    background-color: rgb(66, 36, 25);
}
.clickplay text:nth-child(2){
    color: #fff;
    font-size: 35rpx;
}
.clickplay image{
    width: 40rpx ;
    height: 40rpx;
}
.clickplay text:nth-child(3){
    color: gray;
    font-size: 25rpx;
    position: absolute;
    right: 30rpx;
}
.inline{
    margin-left: 10rpx;
}
/* 点播部分结束 */

/* 剧情简介部分开始 */
.detailout{
    margin-top: 45rpx;
    padding: 0 50rpx;
}
.logo{
    width: 100%;
    height: 180rpx;
}
.role{
    position: relative;
}
.open{
    position: absolute;
    right: 0;
    bottom: 0;
}
.roletitle{
    color:gray;
    display: block;
    margin: 20rpx 0 30rpx 0;
}
.rolecontent{

}
.open{
    color:green;
    font-size: 35rpx;
}
.actor{
    display: block;
    margin:20rpx 0 30rpx 0;
    color:gray;
}
.itemimg{
    width: 180rpx;
    height: 200rpx;
}
.swiperitem{
    width:190rpx !important;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.swiperitem text{
    text-align: center;
}
/* 剧情简介部分结束 */