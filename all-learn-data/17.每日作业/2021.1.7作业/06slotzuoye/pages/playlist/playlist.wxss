/* 顶部导航开始 */
.head{
    background:linear-gradient(105deg,#492931,#312520);
    width: 100%;
    position: relative;

}
.headbtm{
    width: 100%;
    height: 30rpx;
    border-radius: 50%;
    background:linear-gradient(105deg,#492931,#312520);
    position: absolute;
    z-index: -1;
    bottom: -13rpx;
}
.content{
    padding: 50rpx 40rpx 80rpx 40rpx;
    display: flex;
    align-items: center;
    position: relative;
}
.txt{
    height: 300rpx;
    display: flex;
    flex-direction: column;
    align-items:baseline;
}
.poptxt{
    flex:.95;
    color: rgb(175, 175, 175);
    font-weight: bold;
    display: flex;
    margin-left: 20rpx;
    align-items: center;
}
.headfunc{
    color: rgb(206, 206, 206);
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    width: 550rpx;
    background:repeating-linear-gradient(#fff 0,#fff 96rpx,rgb(240, 240, 240));
    height: 100rpx;
    border-radius: 50rpx;
    bottom: -65rpx;
    left: 50%;
    transform: translateX(-50%);
    position: absolute;
}
.headfunc>view{
    color: #000000;
    display: flex;
    align-items: center;
}
.headfunc image{
    width: 50rpx;
    height: 50rpx;
}
.headfunc text{
    margin-left: 10rpx;
}
.bgfirst{
    position: relative;
}
.model1{
    position: absolute;
    top: 36rpx;
    left: 50rpx;
    z-index: 0;
    width: 280rpx;
    height: 50rpx;
    border-radius: 25rpx;
    background-color:#5c4950;
}
.bgpic{
    width: 300rpx;
    height: 300rpx;
    border-radius: 20rpx;
}
.userpic{
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
}
.username{
    margin-left: 20rpx;
}
.model{
    margin-left: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 10rpx 25rpx;
    border-radius: 20rpx;
    background-color: gray;
}
.jiahao{
    width: 30rpx;
    height: 30rpx;
}
.name{
    margin-left: 20rpx;
    width: 370rpx;
    color: white;
    font-weight: bold;
}
.description{
    color: rgb(175, 175, 175);
    font-weight: bold;
    margin-left: 20rpx;
    margin-top: 0;
    width:330rpx;
    display:-webkit-box;
    -webkit-box-orient:vertical;
    text-overflow:ellipsis;
    overflow:hidden;
    -webkit-line-clamp:1;
}
.playcount{
    top: 15rpx;
    right: 15rpx;
}
.desdh{
    display: flex;
    color: rgb(175, 175, 175);
}
/* 顶部导航结束 */

/* 歌单内容开始 */
.musiclist{
    margin-top: 100rpx;
    width: 100%;
    display: flex;
    flex-direction: column;
    background-color: #fff;
}
.listcontent{
    display: flex;
    align-items: center;
    position: relative;
    margin-top: 30rpx;
}
.playpause{
    width: 60rpx;
    height: 60rpx;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    right: 60rpx;
}
.songpic{
    width: 150rpx;
    height: 150rpx;
    margin-left: 20rpx;
}
.songdes{
    display: flex;
    flex-direction: column;
    margin-left: 30rpx;
}
.songdes>text:nth-child(1){
    font-weight: bolder;
    font-size: 30rpx;
}
.songdes>text:nth-child(2){
    font-size:28rpx;
    color: gray;
}
.time{
    position: absolute;
    right: 200rpx;
}
.xuhao{
    margin-left: 60rpx;
    font-weight: bold;
    color: gray;
}
/* 歌单内容结束 */